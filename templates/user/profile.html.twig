{% extends 'base.html.twig' %}

{% block title %}Bienvenue, {{app.user.name}}{% endblock %}

{% block body %}
    <h1>Bienvenue {{app.user.name}}</h1>
    <a class="btn btn-primary" href="{{path("recette_create")}}">Cr√©ez une recette </a>
    <div class="card-deck">
        {% for recette in recettes %}
        <div class="col-4">
            <div class="card">
                <h2 class="card-title">
                {{recette.name}}
                </h2>
                <div class="card-body">
                    <h2>Ingredients</h2>
                    <ul> 
                        {% for ingredient in recette.ingredients %}
                            <li>{{ingredient.name}}</li>
                        {% endfor %}
                    </ul>
                    <h2>Etapes</h2>
                    <ul> 
                        {% for step in recette.steps %}
                            <li>{{step.name}}</li>
                        {% endfor %}
                    </ul>
                    <a class="btn btn-primary" href="{{path("recette_edit", {id:recette.id})}}">Modifier</a>
                    <a class="btn btn-danger" href="{{path("recette_delete", {id:recette.id})}}">Supprimer</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %} 

